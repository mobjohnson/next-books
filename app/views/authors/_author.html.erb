<div>
	<p>Author Name: <%= author.name %> </p>
	<p>
	  <%= link_to 'Destroy Author', [author.collection, author],
	               method: :delete,
	               data: { confirm: 'Are you sure?' } %>
	</p>
	<div id='recommend'>
	<h2>The Next Book you should read by this author:</h2>
	<h3><%= Author.find_book(author).title %></h3>
	</div>

	<table>
	  <tr>
	    <th class='title'>Title</th>
	    <th class='date'>Date</th>
	    <th class='status'>Status</th>
	    <th></th>
	  </tr>	
		<% author.books.each do |book| %>
			<tr>
	      <td class='title'><%= book.title %></td>
				<td class='date'><%= book.date %></td>
				<td class= 'status'><%= book.status %></td>
				<td class='link'><%= link_to 'Edit Status', edit_collection_author_book_path(@collection, author, book) %></td>
			  </tr>
	  <% end %>
	</table>
	Book data provided by BookReads API
	(notification required by Terms of Service)
</div>





